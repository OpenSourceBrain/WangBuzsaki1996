<?xml version='1.0' encoding='UTF-8'?>
<Lems>

<!-- Wang-Buzsaki basket cell with classical HH Sodium, Potassium and leak conductance + current clamp to make it spike -->

    <Target component="sim1"/>

    <Include file="Cells.xml"/>
    <Include file="Synapses.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>

    <Include file="WangBuzsakiNetwork.xml"/>

<!-- Simulation specifications -->

    <Simulation id="sim1" length="150ms" step="0.001ms" target="net1">

        <Display id="d1" title="WangBuzsaki PV+BC with 2uA/cm2 input" timeScale="1ms" xmin="-10" xmax="160" ymin="-80" ymax="40">
            <Line id="PV+BC V" quantity="pop1/0/wb1/v" scale="1mV" color="#0000ff" timeScale="1ms"/>
        </Display>
        
        <Display id="d2" title="WangBuzsaki PV+BC with synaptic inpt" timeScale="1ms" xmin="-10" xmax="160" ymin="-72" ymax="-62">
            <Line id="PV+BC V" quantity="pop2/0/wb1/v" scale="1mV" color="#0000ff" timeScale="1ms"/>
        </Display>      
        
        <Display id="d3" title="s variable of synapse" timeScale="1ms" xmin="-10"  xmax="160" ymin="-0.05" ymax="1.05">
            <Line id="s" quantity="pop2/0/wb1/wbs1/s" scale="1" color="#FF0000" timeScale="1ms" />
        </Display>
        
        <Display id="d4" title="F variable of synapse" timeScale="1ms" xmin="-10"  xmax="160" ymin="-0.05" ymax="1.05">
            <Line id="F" quantity="pop2/0/wb1/wbs1/F" scale="1" color="#FF0000" timeScale="1ms" />
        </Display>
        
        <Display id="d5" title="synaptic current" timeScale="1ms" xmin="-10"  xmax="160" ymin="-0.05" ymax="1.05">
            <Line id="I_syn" quantity="pop2/0/wb1/wbs1/i" scale="1" color="#FF0000" timeScale="1ms" />
        </Display>
    
        <!--
        <OutputFile id="of0" fileName="wangbuzsaki.dat">
            <OutputColumn id="bc" quantity="pop/0/wb1/v"/>
        </OutputFile>
        -->
      
    </Simulation>
  
</Lems>
