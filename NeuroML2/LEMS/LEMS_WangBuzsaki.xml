<?xml version='1.0' encoding='UTF-8'?>
<Lems>

  <!-- Wang-Buzsaki basket cell with classical HH Sodium, Potassium and leak conductance + current clamp to make it spike -->

    <Target component="sim1"/>

    <Include file="Cells.xml"/>
    <Include file="Networks.xml"/>
    <Include file="Simulation.xml"/>

    <Include file="WangBuzsaki.nml"/>
 
<!-- Simulation specifications -->

    <Simulation id="sim1" length="100ms" step="0.01ms" target="net1">

        <Display id="d1" title="WangBuzsaki PV+BC with 2uA/cm2 input" timeScale="1ms" xmin="-10" xmax="110" ymin="-80" ymax="40">
            <Line id="PV+BC V (nml)" quantity="pop/0/wb1/v" scale="1mV" color="#0000ff" timeScale="1ms"/>
        </Display>
        
        <Display id="d2" title="s variable of synapse" timeScale="1ms" xmin="-10"  xmax="110" ymin="-0.05" ymax="1.05">
            <Line id="m" quantity="pop/0/wb1/biophys/membraneProperties/na_all/na_chan/m/q" scale="1" color="#FF0000" timeScale="1ms" />
            <Line id="h" quantity="pop/0/wb1/biophys/membraneProperties/na_all/na_chan/h/q" scale="1" color="#FF00FF" timeScale="1ms" />
            <Line id="hinf" quantity="pop/0/wb1/biophys/membraneProperties/na_all/na_chan/h/inf" scale="1" color="#FF99FF" timeScale="1ms" />
            <Line id="n" quantity="pop/0/wb1/biophys/membraneProperties/k_all/k_chan/n/q" scale="1" color="#FFFF00" timeScale="1ms" />
            <Line id="ninf" quantity="pop/0/wb1/biophys/membraneProperties/k_all/k_chan/n/inf" scale="1" color="#FFFF99" timeScale="1ms" />
        </Display>
    
        <OutputFile id="of0" fileName="wangbuzsaki.dat">
            <OutputColumn id="bc" quantity="pop/0/wb1/v"/>
        </OutputFile>
      
    </Simulation>
  
</Lems>
